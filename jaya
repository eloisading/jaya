<script>
/* 区块1 3D旋转轮播 */
const carouselInner = document.querySelector('.carousel-inner');
const items = document.querySelectorAll('.carousel-item');
const itemCount = items.length;
let angle = 360 / itemCount;
let currIndex = 0;

items.forEach((item, i) => {
    let rotateY = i * angle;
    item.style.transform = `rotateY(${rotateY}deg) translateZ(260px)`;
});

setInterval(() => {
    currIndex++;
    let rotate = currIndex * -angle;
    carouselInner.style.transform = `rotateY(${rotate}deg)`;
}, 3000);

/* 区块4 单个渐隐轮播 */
(function(){
    const fadeImgs = document.querySelectorAll("#fade-slider img");
    let current = 0;
    setInterval(() => {
        fadeImgs[current].classList.remove("active");
        current = (current + 1) % fadeImgs.length;
        fadeImgs[current].classList.add("active");
    }, 3000);
})();
</script>

